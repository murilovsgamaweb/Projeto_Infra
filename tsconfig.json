{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/shared/components/*"],
      "@helpers/*": ["./src/shared/helpers/*"],
      "@services/*": ["./src/shared/services/*"],
      "@stores/*": ["./src/shared/stores/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
